# SKAI Configuration - Example File
# ==================
# Rename this file to .env and update with your values

# API Keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here

# Application Settings
APP_NAME=SKAI
DEBUG_MODE=False
LOG_LEVEL=info
LOG_TO_FILE=True
DETAILED_LOGS=False

# LLM Settings
LLM_PROVIDER=openrouter

# Available FREE models for different agent roles:
# - For Kernel Agent (orchestration): 
#   LLM_MODEL=meta-llama/llama-4-maverick:free
#   Context: 128K, Max Output: 128K
#
# - For Communicator Agent (understanding):
#   LLM_MODEL=meta-llama/llama-3.3-8b-instruct:free
#   Context: 128K, Max Output: 4K
#
# - For Research Agent (information gathering):
#   LLM_MODEL=tngtech/deepseek-r1t-chimera:free
#   Context: 164K, Max Output: 164K
#
# - For general purpose tasks:
#   LLM_MODEL=google/gemini-2.0-flash-exp:free
#   Context: 1.05M, Max Output: 8K

LLM_MODEL=meta-llama/llama-3.3-8b-instruct:free
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024
LLM_TOP_P=0.95
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0
LLM_TIMEOUT=60

# Voice Settings
# Text-to-Speech (TTS) system options:
# - coqui_tts: High quality open-source TTS (requires TTS package)
# - piper: Lightweight offline TTS (requires piper binary)
# - system: System default TTS using pyttsx3
TTS_SYSTEM=system

# Speech-to-Text (STT) system options:
# - whisper: OpenAI's Whisper model (requires whisper package)
# - system: System default using SpeechRecognition with Google API
STT_SYSTEM=system

# Wake Word Settings
# Set to false to disable wake word detection by default
WAKE_WORD_ENABLED=false
# Default wake word phrase
WAKE_WORD_PHRASE="Hey Sky"
# Whether to automatically start conversation mode when wake word is detected
WAKE_WORD_CONVERSATION_MODE=true
# Detection sensitivity (0.0-1.0, higher is more sensitive)
WAKE_WORD_SENSITIVITY=0.5

# Memory Settings
CHROMA_PATH=data/chroma_db 